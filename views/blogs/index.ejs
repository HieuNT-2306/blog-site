<%- include('../partials/header.ejs') %> 
<body>
    <%- include('../partials/nav.ejs') %> 
    <div class="blogs content">
        <h2>All blogs</h2>
        <% if (blogs.length > 0 ) { %>
            <% blogs.forEach(blog => { %>
                <a class="single-blog" href="/blogs/<%= blog.id%>">
                    <h3 class="title"> <%= blog.title %> </h3>
                    <p class="snippet">  <%= blog.snippet%></p>
                    <p class="date"> <%= blog.createdAt.toDateString() %> </p>
                </a>
            <% }) %> 
        <% } else {  %>
            <p>There are no blogs to display right now</p>
        <% } %>  
    </div>
    <%- include("../partials/footer.ejs") %>
</body> 
</html>